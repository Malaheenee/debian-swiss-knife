# opacity-rule = [ "80:class_g = 'URxvt'" ];

### Быстрые настройки для отдельных типов окон
wintypes:
{
# Подсказки
  tooltip = { fade = false; shadow = false; opacity = 0.8; focus = true; };
# Уведомления
  notify = { shadow = false; opacity = 0.9; focus = false; };
