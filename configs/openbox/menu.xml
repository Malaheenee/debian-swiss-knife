<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Эмулятор терминала">
    <action name="Execute"><command>x-terminal-emulator</command></action>
  </item>
  <item label="Веб-браузер">
    <action name="Execute"><command>x-www-browser</command></action>
  </item>
  <item label="Электронная почта">
    <action name="Execute"><command>sylpheed</command></action>
  </item>
  <item label="Файловый менеджер">
    <action name="Execute"><command>spacefm</command></action>
  </item>
  <item label="Текстовый редактор">
    <action name="Execute"><command>geany</command></action>
  </item>

  <separator />

  <menu id="client-list-menu"/>
  
  <separator />

  <menu id="Internet" label="Интернет">
    <item label="Iceweasel">
      <action name="Execute"><command>iceweasel</command></action>
    </item>
    <item label="Gajim">
      <action name="Execute"><command>gajim</command></action>
    </item>
    <item label="Sylpheed">
      <action name="Execute"><command>sylpheed</command></action>
    </item>
  </menu>
  
  <menu id="Graphics" label="Графика">
    <item label="GIMP">
      <action name="Execute"><command>gimp</command></action>
    </item>
    <item label="RawTherapee">
      <action name="Execute"><command>rawtherapee</command></action>
    </item>
    <item label="Viewnior">
      <action name="Execute"><command>viewnior</command></action>
    </item>
    <item label="LibreOffice Draw">
      <action name="Execute"><command>loffice --draw</command></action>
    </item>
  </menu>

  <menu id="Console" label="Консоль">
    <item label="LilyTerm">
      <action name="Execute"><command>lilyterm</command></action>
    </item>
    <item label="Midnight Commander">
      <action name="Execute"><command>lilyterm --join --execute mc</command></action>
    </item>
    <item label="htop">
      <action name="Execute"><command>lilyterm --join --execute htop</command></action>
    </item>
  </menu>
  
  <menu id="Utilites" label="Утилиты">
    <item label="Geany">
      <action name="Execute"><command>geany</command></action>
    </item>
    <item label="SpaceFM">
      <action name="Execute"><command>spacefm</command></action>
    </item>
    <item label="Xarchiver">
      <action name="Execute"><command>xarchiver</command></action>
    </item>
    <item label="Galculator">
      <action name="Execute"><command>galculator</command></action>
    </item>
    <item label="SimpleBurn">
      <action name="Execute"><command>simpleburn</command></action>
    </item>
    <item label="ReportBug">
      <action name="Execute"><command>reportbug</command></action>
    </item>
  </menu>

  <menu id="Hardware" label="Оборудование">
    <item label="aRandr">
      <action name="Execute"><command>arandr</command></action>
    </item>
    <item label="gParted">
      <action name="Execute"><command>gparted</command></action>
    </item>
  </menu>
  
  <menu id="Office" label="Офис">
    <item label="Evince">
      <action name="Execute"><command>evince</command></action>
    </item>
    <item label="LibreOffice Writer">
      <action name="Execute"><command>loffice --writer</command></action>
    </item>
    <item label="LibreOffice Calc">
      <action name="Execute"><command>loffice --calc</command></action>
    </item>
    <item label="LibreOffice Impress">
      <action name="Execute"><command>loffice --impress</command></action>
    </item>
  </menu>

  <menu id="Media" label="Медиа">
    <item label="Радио POLSKASTACJA">
      <action name="Execute"><command>lilyterm --join --execute mpv "http://fm.kiwi.kz:80/radio80italodisco"</command></action>
    </item>
    <item label="Файл из буфера обмена">
      <action name="Execute"><command>lilyterm --join --execute bash -c "mpv \"$(xclip -out -selection clipboard)\""</command></action>
    </item>
    <item label="Воспроизвести Audio CD">
      <action name="Execute"><command>lilyterm --join --execute mpv cdda://</command></action>
    </item>
  </menu>

  <separator />

  <menu id="Exit" label="Выключение...">
    <item label="Выйти из системы">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </item>
    <item label="Перезагрузить">
      <action name="Execute">
        <prompt>Вы действительно хотите перезагрузить компьютер?</prompt>
        <command>systemctl reboot</command>
      </action>
    </item>
    <item label="Выключить">
      <action name="Execute">
        <prompt>Вы действительно хотите выключить компьютер?</prompt>
        <command>systemctl poweroff</command>
      </action>
    </item>
  </menu>

</menu>

</openbox_menu>
